
 <div class="row">
   <div class="col-md-4">
     <h1> New Summary </h1>
   </div>
   <div class="col-md-8">
     <%= form_for @summary do |f| %>
       <div class="form-group">
         <%= f.label :description %>
         <%= f.text_field :description, rows: 8, class: 'form-control', placeholder: "Enter summary name" %>
       </div>
       
         
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>