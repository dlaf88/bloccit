

<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
    
  </div>
  
  <% if @summary %>
  <div class='container'>
    <div class='row' style= 'color:red'> <%= @summary.description %> </div>
    <%= link_to "Edit Summary", edit_summary_path(@summary), class: 'btn btn-success' %>
  </div>
 
  
  
  <% end %>
 
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>