 
<div>
  <% if current_user %>
  <h4>Add a Comment</h4>
  <%= form_for [@post, @post.comments.build], remote: true do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, placeholder: "Enter comment." %>
    <div class="form-group">
      <%= f.submit "Create Comment", class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
  
  
</div>